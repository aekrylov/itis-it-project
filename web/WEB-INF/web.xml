         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>RegistrationAjaxServlet</servlet-name>
        <servlet-class>ru.kpfu.itis.aekrylov.itproject.servlets.RegistrationAjaxServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProfileServlet</servlet-name>
        <servlet-class>ru.kpfu.itis.aekrylov.itproject.servlets.ProfileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChatListServlet</servlet-name>
        <servlet-class>ru.kpfu.itis.aekrylov.itproject.servlets.ChatListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChatServlet</servlet-name>
        <servlet-class>ru.kpfu.itis.aekrylov.itproject.servlets.ChatServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ItemServlet</servlet-name>
        <servlet-class>ru.kpfu.itis.aekrylov.itproject.servlets.ItemServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ItemAddServlet</servlet-name>
        <servlet-class>ru.kpfu.itis.aekrylov.itproject.servlets.ItemAddServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ItemListServlet</servlet-name>
        <servlet-class>ru.kpfu.itis.aekrylov.itproject.servlets.ItemListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HistoryServlet</servlet-name>
        <servlet-class>ru.kpfu.itis.aekrylov.itproject.servlets.HistoryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SettingsServlet</servlet-name>
        <servlet-class>ru.kpfu.itis.aekrylov.itproject.servlets.SettingsServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>ru.kpfu.itis.aekrylov.itproject.servlets.admin.AdminServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminCreateServlet</servlet-name>
        <servlet-class>ru.kpfu.itis.aekrylov.itproject.servlets.admin.Admin–°reateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminEditServlet</servlet-name>
        <servlet-class>ru.kpfu.itis.aekrylov.itproject.servlets.admin.AdminEditServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminDeleteServlet</servlet-name>
        <servlet-class>ru.kpfu.itis.aekrylov.itproject.servlets.admin.AdminDeleteServlet</servlet-class>
    </servlet>

