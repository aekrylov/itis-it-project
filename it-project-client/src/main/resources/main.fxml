<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.geometry.Insets?>
<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="400.0" prefWidth="600.0" spacing="15"
      xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.kpfu.itis.aekrylov.itproject.client.MainController">
    <MenuBar>
        <Menu mnemonicParsing="false" text="File">
            <items>
                <MenuItem mnemonicParsing="false" text="Close" />
            </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Edit">
            <items>
                <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
            <items>
                <MenuItem mnemonicParsing="false" text="About" />
            </items>
        </Menu>
    </MenuBar>
    <HBox VBox.vgrow="ALWAYS">
        <padding>
            <Insets>
                <left>15</left>
                <right>15</right>
            </Insets>
        </padding>
        <children>
         <VBox prefWidth="300.0" spacing="15" >
            <children>
               <HBox spacing="10">
                  <children>
                     <Label text="Brand" />
                     <TextField fx:id="tfBrand" />
                  </children>
               </HBox>
               <HBox layoutX="10.0" layoutY="10.0" spacing="10">
                  <children>
                     <Label text="Model" />
                     <TextField fx:id="tfModel" />
                  </children>
               </HBox>
               <HBox layoutX="10.0" layoutY="10.0" spacing="10">
                  <children>
                     <Label text="Price" />
                     <TextField fx:id="tfPriceLow" promptText="From" prefWidth="75" />
                     <TextField fx:id="tfPriceHigh" promptText="To" prefWidth="75" />
                  </children>
               </HBox>
               <Button fx:id="btnSubmit" mnemonicParsing="false" onMouseClicked="#submitForm" text="Find" />
            </children>
         </VBox>
         <ListView fx:id="postList" VBox.vgrow="SOMETIMES" HBox.hgrow="SOMETIMES"/>
        </children>
    </HBox>
</VBox>
